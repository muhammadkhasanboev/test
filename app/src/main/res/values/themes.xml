<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Test" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ajou_logo</item>
    </style>

    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <!-- Background (can be a color or drawable) -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- The logo / icon to animate -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ajou_logo3</item>
        <!-- After splash, switch to this theme -->
        <item name="postSplashScreenTheme">@style/Theme.Test</item>
    </style>

    <style name="Theme.Test" parent="Base.Theme.Test">
        <item name="colorPrimary">#0f2972</item>
    </style>
</resources>